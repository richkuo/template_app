@import "foundation/common/ratios";
@import 'foundation';


// Orbit adjustments
.orbit-wrapper {
  .slider-nav span {
    @include opacity(0);
    @include single-transition(opacity, 500ms);
  }
  &:hover .slider-nav span {
    @include opacity(1);
  }
  height: 400px !important;
 // width:  100% !important;
}

// Orbit sliders
.brooklynbridge {
  background: url(<%= image_path "brooklynbridge.jpg" %>);
  height: 100%;
  h1, h2, h3, h4, h5, h6 {
    color: white;
  }
  color: white;
  padding: 50px;
}

.shanghai {
  background: url(<%= image_path "shanghai.jpg" %>);
  height: 100%;
  h1, h2, h3, h4, h5, h6 {
    color: white;
  }
  color: white;
  padding: 75px;

  fieldset {
    legend {
      background: none;
    }
  }
}

.niagarafalls {
  background: url(<%= image_path "niagarafalls.jpg" %>);
  height: 100%;
  h1, h2, h3, h4, h5, h6 {
    color: black;
  }
  color: black;
  padding: 25px;
  padding-left: 125px;

  float: right;
}

.deserttrees {
  background: url(<%= image_path "deserttrees.jpg" %>);
  height: 100%;
  h1, h2, h3, h4, h5, h6 {
    color: black;
  }
  color: black;
  padding: 25px;
  padding-left: 125px;

  float: right;
  fieldset {
    legend {
      background: none;
    }
  }
}

// General

header {
  padding-bottom: 0px;
}

.no-padding {
  padding: 0px !important;
}

.no-margins {
  margin: 0px !important;
}

// Top Bar adjustments
.top-bar {
  margin-bottom: 30px !important;
  background: url(<%= 'logo-bg.png' %>) repeat-x;
  height: 70px;
}

.top-bar li h1 a {
  display: block;
  text-indent: -1000000px;
  background: url(<%= 'spotlight-logo.png' %>) no-repeat;
  height: 70px;
  width: 171px;
}

.top-bar ul {
  height: 70px;
}

.top-bar > ul .name h1,
.top-bar ul > li a:not(.button) {
  height: 70px;
}

.top-bar > ul .name h1 {
  padding-left: 25px;
}

dl.tabs {
  border-bottom-width: 4px;
  margin: 0 25px;
  text-transform: uppercase;
}

