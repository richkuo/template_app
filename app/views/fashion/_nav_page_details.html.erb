$('#page_details_title').keyup(function(event){
		var fieldtext = document.getElementById("page_details_title").value;
		$('span#demo_page_title').text(fieldtext);
});

$('#page_details_subtitle').keyup(function(event){
		var fieldtext = document.getElementById("page_details_subtitle").value;
		$('span#demo_page_subtitle').text(fieldtext);
});

$('#page_details_logo').blur(function(event){
		var fieldtext = document.getElementById("page_details_logo").value;
		$('img#demo_page_logo').attr("src", fieldtext);
		$('img#demo_page_logo').show().fadeIn(500);
});

$('#page_details_bg').blur(function(event){
		var fieldtext = document.getElementById("page_details_bg").value;
		$('body').css('background-image', 'url("'+fieldtext+'")');
		console.log(fieldtext);
});

