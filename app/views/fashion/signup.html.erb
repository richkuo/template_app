    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="three columns pull-nine">

      <ul class="side-nav">
        <li><a href="#" id="page_details_nav">Page Details</a></li>
        <form id="page_details_form">
		  <label>Title</label>
		  <input id="page_details_title" type="text" placeholder="Example Title" />
		  <label>Subtitle</label>
		  <input id="page_details_subtitle" type="text" class="twelve" placeholder="Example Subtitle" />
		  <label>Logo URL</label>
		  <input id="page_details_logo" type="text" class="twelve" placeholder="http://www.logo.com/image.jpg" />

		  <input id="page_articles_save" type="submit" class="button" value="Save" />
		</form>

        <li><a href="#" id="press_articles_nav">Press Articles</a></li>
        		    <%= render 'articles/form' %>

        <form id="press_articles_form" style="display:none">

		  <label>Article URL</label>
		  <input id="press_articles_url" type="text" placeholder="http://example.com" />

		  <label>Title</label>
		  <input id="press_articles_title" type="text" class="twelve" placeholder="Article Subject" />
		  <label>Short Description</label>
		  <input id="press_articles_description" type="text" class="twelve" placeholder="Article Description" />
		  <label>Date</label>
		  <input type="text" class="twelve" placeholder="Article Date Published" />
		  <label>Upload Image</label>
		  <input id="press_articles_image" type="text" class="twelve" placeholder="Upload Image" />

		  <input id="press_articles_save" type="submit" class="button" value="Save" />
		  <button class="button">New Article</button>
		</form>

        <li><a href="#" id="social_accounts_nav">Social Accounts</a></li>
        <form id="social_accounts_form" style="display:none">
		  <label>Twitter</label>
		  <input id="twitter_form" type="text" placeholder="@example" />
		  <label>Facebook Page</label>
		  <input id="facebook_form" type="text" class="twelve" placeholder="facebook.com/ExamplePage" />
		  <label>Pinterest</label>
		  <input id="pinterest_form" type="text" class="twelve" placeholder="pinterest.com/Example" />
		  <label>Instagram</label>
		  <input id="instagram_form" type="text" class="twelve" placeholder="instagram.com/Example" />
		  <label>Foursquare</label>
		  <input id="foursquare_form" type="text" class="twelve" placeholder="tumblr.com/Example" />
		  <label>Swaag</label>
		  <input id="swaag_form" type="text" class="twelve" placeholder="swaag.com/Example" />

		  <input id="social_accounts_save" type="submit" class="button" value="Save" />
		</form>
        <li><a href="#" id="page_settings_nav">Account Settings</a></li>
        <form id="page_settings_form" style="display:none">
		  <label>Email Address</label>
		  <input type="text" placeholder="example@example.com" />
		  <label>Save Id</label>
		  <input type="text" class="twelve" placeholder="1234" />

		  <input id="save_id" type="submit" class="button" value="Save" />
		</form>

      </ul>
    </div>

  </div>

<script>

<%= render 'nav_toggling' %>

