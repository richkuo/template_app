    	<% render :partial => 'page_settings' %>

<!--     </div>
 -->
    <!-- Nav Sidebar -->
    <!-- This is source ordered to be pulled to the left on larger screens -->
    <div class="three columns pull-nine">

      <ul class="side-nav">
        <li><a href="#" id="page_details_nav">Page Details</a></li>
        <form id="page_details_form">
		  <label>Title</label>
		  <input id="page_details_title" type="text" placeholder="Example Title" />
		  <label>Subtitle</label>
		  <input id="page_details_subtitle" type="text" class="twelve" placeholder="Example Subtitle" />
		  <label>Logo URL</label>
		  <input id="page_details_logo" type="text" class="twelve" placeholder="http://www.logo.com/image.jpg" />

		  <input id="page_articles_save" type="submit" class="button" value="Save" />
		</form>

        <li><a href="#" id="press_articles_nav">Press Articles</a></li>
        		    <%= render 'articles/form' %>

        <form id="press_articles_form" style="display:none">

		  <label>Article URL</label>
		  <input id="press_articles_url" type="text" placeholder="http://example.com" />

		  <label>Title</label>
		  <input id="press_articles_title" type="text" class="twelve" placeholder="Article Subject" />
		  <label>Short Description</label>
		  <input id="press_articles_description" type="text" class="twelve" placeholder="Article Description" />
		  <label>Date</label>
		  <input type="text" class="twelve" placeholder="Article Date Published" />
		  <label>Upload Image</label>
		  <input id="press_articles_image" type="text" class="twelve" placeholder="Upload Image" />

		  <input id="press_articles_save" type="submit" class="button" value="Save" />
		  <button class="button">New Article</button>
		</form>

        <li><a href="#" id="social_accounts_nav">Social Accounts</a></li>
        <form id="social_accounts_form" style="display:none">
		  <label>Twitter</label>
		  <input type="text" placeholder="@example" />
		  <label>Facebook Page</label>
		  <input type="text" class="twelve" placeholder="facebook.com/ExamplePage" />
		  <label>Pinterest</label>
		  <input type="text" class="twelve" placeholder="pinterest.com/Example" />
		  <label>Instagram</label>
		  <input type="text" class="twelve" placeholder="instagram.com/Example" />
		  <label>Tumblr</label>
		  <input type="text" class="twelve" placeholder="tumblr.com/Example" />

		  <input id="social_accounts_save" type="submit" class="button" value="Save" />
		</form>
        <li><a href="#" id="page_settings_nav">Page Settings</a></li>
        <form id="page_settings_form" style="display:none">
		  <label>Email Address</label>
		  <input type="text" placeholder="example@example.com" />
		  <label>Google Analytics ID</label>
		  <input type="text" class="twelve" placeholder="a24sdfIOHN" />

		  <input id="page_settings_save" type="submit" class="button" value="Save" />
		</form>

      </ul>
    </div>

  </div>

<script>
$('#page_details_nav').click(function() {
	$('#page_details_form').toggle(1000/2);
	$('#page_details_show').toggle(1400/2);
	$('#press_articles_form').hide("slow");
	$('#press_articles_show').hide("slow");
	$('#social_accounts_form').hide("slow");
	$('#social_accounts_show').hide("slow");
	$('#page_settings_form').hide("slow");
	$('#page_settings_show').hide("slow");
});
$('#press_articles_nav').click(function() {
	$('#press_articles_form').toggle(1000/2);
	$('#press_articles_input').toggle(1000/2);
	$('#press_articles_show').toggle(1400/2);
	$('#page_details_form').hide("slow");
	$('#page_details_show').hide("slow");
	$('#social_accounts_form').hide("slow");
	$('#social_accounts_show').hide("slow");
	$('#page_settings_form').hide("slow");
	$('#page_settings_show').hide("slow");
});
$('#social_accounts_nav').click(function() {
	$('#social_accounts_form').toggle(1000/2);
	$('#social_accounts_show').toggle(1400/2);
	$('#press_articles_input').hide("slow");
	$('#page_details_form').hide("slow");
	$('#page_details_show').hide("slow");
	$('#press_articles_form').hide("slow");
	$('#press_articles_show').hide("slow");
	$('#page_settings_form').hide("slow");
	$('#page_settings_show').hide("slow");
});
$('#page_settings_nav').click(function() {
	$('#page_settings_form').toggle(1000/2);
	$('#page_settings_show').toggle(1400/2);
	$('#press_articles_input').hide("slow");
	$('#page_details_form').hide("slow");
	$('#page_details_show').hide("slow");
	$('#press_articles_form').hide("slow");
	$('#press_articles_show').hide("slow");
	$('#social_accounts_form').hide("slow");
	$('#social_accounts_show').hide("slow");
});

$('#page_settings_save').click(function() {
	$.ajax({
		type: "POST",
		url: "https://fashionlaunch2013.appspot.com/user/1234/",
		data: { name: "John", location: "Boston" }
	}).done(function( msg ) {
	  alert( "Data Saved: " + msg );
	});
});

$('#press_articles_save').click(function() {
	$.ajax({
		type: "POST",
		url: "http://localhost:3000/articles/create"
	}).done(function( msg ) {
	  alert( "getgetget: " + msg );
	});
});

$('#page_details_title').keyup(function(event){
		fieldtext = document.getElementById("page_details_title").value;
		$('span#demo_page_title').text(fieldtext);
});

$('#page_details_subtitle').keyup(function(event){
		fieldtext = document.getElementById("page_details_subtitle").value;
		$('span#demo_page_subtitle').text(fieldtext);
});

$('#page_details_logo').blur(function(event){
		fieldtext = document.getElementById("page_details_logo").value;
		$('img#demo_page_logo').attr("src", fieldtext);
		$('img#demo_page_logo').show().fadeIn(500);
		console.log(fieldtext);
});

</script>

